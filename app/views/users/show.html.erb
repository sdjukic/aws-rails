
<p id="notice"><%= notice %></p>

<h1>
  <strong>Name:</strong>
  <%= @user.name %>
</h1>

<h3>
  <strong>Avatar url:</strong>
  <%= @user.avatar_url %>
</h3>
<div class="col-md-8">

	<% if @user_resources.any? %>
      
      <h3>Files (<%= @user.user_resources.count %>)</h3>
      <span class = 'icono icono-folder'> </span> 
      <ul class="resources"> 
	        <%= render @user_resources %>
	    </ul>
  <% else %>
     <span class = 'icono icono-folder'> </span> 
	<% end %>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
